<Window x:Class="docket.DockPrefs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dock Preferences" Width="300" WindowStartupLocation="CenterScreen" SizeToContent="Height" WindowStyle="ToolWindow" Topmost="True" ResizeMode="CanMinimize" Margin="0">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0"  Content="Monitor" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" DisplayMemberPath="DeviceName" ItemsSource="{Binding MonitorList}" SelectedValue="{Binding Monitor}"/>

        <Label Grid.Row="1" Grid.Column="0"  Content="Icon Size" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="{Binding IconSize}"/>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Ok" IsCancel="True" IsDefault="True" Margin="0,5,0,5" Height="25" Background="White" />
    </Grid>
</Window>
